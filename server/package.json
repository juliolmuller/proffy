{
  "name": "@proffy/server",
  "version": "1.1.3",
  "private": true,
  "license": "MIT",
  "authors": [
    "RocketSeat",
    "Julio L. Muller"
  ],
  "scripts": {
    "postinstall": "node -e \"require('fs').existsSync('.env') || require('fs').copyFileSync('.env.example', '.env')\"",
    "commit": "cd .. && npm run commit",
    "seed": "knex seed:run --knexfile src/app/config.ts",
    "migrate": "knex migrate:latest --knexfile src/app/config.ts",
    "migrate:seed": "npm run migrate && npm run seed",
    "migrate:reset": "knex migrate:rollback --all --knexfile src/app/config.ts && npm run migrate",
    "migrate:reset:seed": "npm run migrate:reset && npm run seed",
    "dev": "tsx watch src/bootstrap.ts",
    "development": "npm run dev",
    "build": "rm -rf dist/ && tsc -p .",
    "prod": "node dist/bootstrap.js",
    "production": "npm run prod",
    "lint": "eslint --fix src/",
    "prestart": "knex migrate:rollback --all --knexfile dist/app/config.js && knex migrate:latest --knexfile dist/app/config.js && knex seed:run --knexfile dist/app/config.js",
    "start": "npm run prod"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "figlet": "^1.8.1",
    "http-status-codes": "^2.3.0",
    "knex": "~0.95.15",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv-flow": "^3.3.3",
    "@types/express": "^5.0.1",
    "@types/figlet": "^1.7.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.3",
    "eslint": "^7.32.0",
    "eslint-config-lacussoft": "^2.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
