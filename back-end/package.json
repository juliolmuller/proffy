{
  "name": "proffy-server",
  "version": "1.0.0",
  "main": "build/index.js",
  "scripts": {
    "development": "tsnd --clear --respawn --transpile-only src/index.ts",
    "dev": "yarn run development",
    "migrate": "knex --knexfile knexfile.ts migrate:latest",
    "migrate:up": "knex --knexfile knexfile.ts migrate:up",
    "migrate:down": "knex --knexfile knexfile.ts migrate:down",
    "migrate:rollback": "knex --knexfile knexfile.ts migrate:latest"
  },
  "devDependencies": {
    "@lacussoft/eslint-config-standard": "^1.0.4",
    "@types/express": "^4.17.7",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "knex": "^0.21.2",
    "sqlite3": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "@lacussoft/standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "no-unused-vars": "off",
      "linebreak-style": [
        "error",
        "unix"
      ]
    }
  }
}
